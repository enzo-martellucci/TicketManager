<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TicketManager{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/logo.png') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="https://kit.fontawesome.com/dfba18c1d8.js" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body class="break-all lg:flex">
    <aside class="grid content-start gap-6 p-6 text-2xl bg-dark-blue sm:max-lg:grid-cols-2 lg:sticky lg:top-0 lg:h-screen lg:w-1/5">
        {% include 'partials/navbar/navbar.html.twig' with { route: app.request.attributes.get('_route') } %}
    </aside>

    <div class="w-full px-4 py-6 bg-light-cream sm:px-10">
        <div class="flex items-center justify-center gap-x-6 sm:gap-x-10">
            <img src="{{ asset('images/logo.png') }}" alt="The TicketManager logo" class="w-12 sm:w-16 md:w-24">
            <div class="text-4xl sm:text-6xl md:text-7xl">Ticket Manager</div>
        </div>

        <main class="mt-10 md:mt-16">
            <h1 class="mb-10 text-3xl sm:text-4xl md:text-5xl">{% block h1 %}Dashboard{% endblock %}</h1>
            {% block body %}{% endblock %}
        </main>
    </div>
</body>
</html>
